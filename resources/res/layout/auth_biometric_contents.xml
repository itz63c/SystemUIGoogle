<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sysui="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <TextView android:textSize="20sp" android:textColor="?android:attr/textColorPrimary" android:gravity="@integer/biometric_dialog_text_gravity" android:id="@+id/title" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@android:string/permdesc_broadcastNetworkPrivileged" android:paddingHorizontal="24dp"/>
    <TextView android:textSize="16sp" android:textColor="?android:attr/textColorPrimary" android:gravity="@integer/biometric_dialog_text_gravity" android:id="@+id/subtitle" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="24dp"/>
    <TextView android:textSize="16sp" android:textColor="?android:attr/textColorPrimary" android:gravity="@integer/biometric_dialog_text_gravity" android:id="@+id/description" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="24dp"/>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/biometric_icon" android:paddingTop="48dp" android:layout_width="@dimen/biometric_dialog_biometric_icon_size" android:layout_height="@dimen/biometric_dialog_biometric_icon_size" android:scaleType="fitXY"/>
    <TextView android:textSize="12sp" android:textColor="@color/biometric_dialog_gray" android:gravity="center_horizontal" android:id="@+id/indicator" android:paddingTop="16dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:accessibilityLiveRegion="polite" android:paddingHorizontal="24dp"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/button_bar" android:paddingTop="24dp" android:layout_width="match_parent" android:layout_height="72dp" style="?android:attr/buttonBarStyle">
        <Space android:id="@+id/leftSpacer" android:visibility="visible" android:layout_width="12dp" android:layout_height="match_parent"/>
        <Button android:gravity="center" android:id="@+id/button_negative" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxLines="2" style="@android:style/Animation.VoiceInteractionSession"/>
        <Space android:id="@+id/middleSpacer" android:visibility="visible" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <Button android:gravity="center" android:id="@+id/button_positive" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/biometric_dialog_confirm" android:maxLines="2" style="@android:style/Animation.VoiceActivity"/>
        <Button android:gravity="center" android:id="@+id/button_try_again" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/biometric_dialog_try_again" android:maxLines="2" style="@android:style/Animation.VoiceActivity"/>
        <Space android:id="@+id/rightSpacer" android:visibility="visible" android:layout_width="12dp" android:layout_height="match_parent"/>
    </LinearLayout>
</merge>
